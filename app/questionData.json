{
  "title": "Alignment",
  "description": "This is a chart of D&D Alignment",
  "axes": {
    "chaoticness": { // this is the id of the axis, to be referenced later
      "axis" : "x",
      "labels": ["Lawful", "Chaotic"]
    },
    "goodness": {
      "axis" : "y", // this is the id of the axis, to be referenced later
      "labels": ["Evil", "Good"]
    }
  },
  "questions": [
  {
    "type": "text",
    "qid": "name",
    "question": "What's your name?"
  },
  {
    "type": "likert", 
    "qid": "meeting_cancel_elated", // this has to be unique to each question
    "question": "You feel secretly elated when a meeting is canceled.",
    "func": "return {'chaoticness': 0.5 * ans }" 
    // Each function must refer to one of the two keys of the axes.
    // 'ans' is a value from -1.0 to 1.0.
    // the multiplier (0.5 in this example) lets you decide how 'weighted' the answer is 
  },
  {
    "type": "likert",
    "qid": "turtle_flip",
    "question": "If you see a turtle upside on the ground, you would help flip it over.",
    "func": "return {'goodness': 1.0 * ans }"
  },
  {
    "type": "likert",
    "qid": "altered_states",
    "question": "Altered states are not desirable to you.",
    "func": "return {'chaoticness': -0.2 * ans, 'goodness': 0.2 * ans }" 
    // each answer can operate on both axes
  }]
}

